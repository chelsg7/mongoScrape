  <navbar class = "mx-auto text-center navbar navbar-dark bg-primary">
    <div class = "container">
      <h1 class = "text-white">
        Saved Articles
      </h1>
      <a href="/"><button class="btn-lg btn-secondary nav-link">
        Home
      </button></a>
    </div>
  </navbar>

  <div class = "container">
    {{#each articles}}
    {{#if saved}}
      <figure class="card storyPanel clearfix mx-auto text-center my-4">
        <a href="{{storyUrl}}" class="pull-right" target="_blank">
          <div class="imgBox">
            <img src="{{imgUrl}}" alt="" class="storyImg" height="150">
          </div>
        </a>
        {{#if storyUrl}}
          <a href="{{storyUrl}}" class="storyLink" target="_blank">
            <h2 class="storyHeadline">{{headline}}</h2>
          </a>
        {{else}}
          <h3 class="storyHeadline">{{headline}}</h3>
        {{/if}}
        <h5 class="storyByline">
          {{byLine}}
        </h5>
        <h6 class="storySummary">
          {{summary}}
        </h6>
        <button class="addNote storyButton btn-lg col-3 btn-success my-2 mx-auto" data-id="{{_id}}">
          Add Note
        </button>
        <button class="deleteArticle storyButton btn-lg col-3 btn-success my-2 mx-auto" data-id="{{_id}}">Delete Article</button>
      </figure>
    {{/if}}
  {{/each}}
  </div>
    

  {{!-- modal for displaying and creating notes --}}
  <div id="noteModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-md">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title text-center">Add a note</h4>
        </div>
        <div class="modal-body">
          <input type="text" id="noteTitleEntry" class="noteInput" placeholder="Enter Title">
          <input type="text" id="noteBodyEntry" class="noteInput" placeholder="Enter Body">
          <div id="noteArea"></div>
        </div>
        <div class="modal-footer">
          <h5 class="instructions">Click the note to read it, or X to delete</h5>
          <button type="button" id="submitNote">Save Note</button>
        </div>
      </div>
    </div>
  </div>

  {{!-- error modal --}}
  <div id="error" class="modal fade" role="dialog">
    <div class="modal-dialog modal-md">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <h2>There was an error processing your request.  Please try again later.</h2>
        </div>
      </div>
    </div>
  </div>
